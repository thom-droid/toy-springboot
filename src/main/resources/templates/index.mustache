{{>layout/header}}
    <h1>canned coffee project index page</h1>
    <img src="/image/mario.png" width="250" />
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
            </div>
        </div>
        {{!--lists--}}
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
                <tr>
                    <th>글번호</th>
                    <th>제목</th>
                    <th>작성자</th>
                    <th>최종수정일</th>
                </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td>
                        <a href="/posts/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>

            {{/posts}}
            </tbody>
        </table>
    </div>

{{>layout/footer}}